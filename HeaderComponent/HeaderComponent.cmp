<aura:component controller="EmployeePortalController">
    <aura:attribute name='greeting' type='String'></aura:attribute>
    <aura:attribute name='username' type='String'></aura:attribute>
    <aura:handler name="init" value="{!this}" action="{!c.greeting}"></aura:handler>
    <lightning:layoutItem padding="around-small" size="12">
        <div class="page-section page-header">
            <h2><div class="slds-text-align_center">{!v.greeting} {!v.username} !</div></h2>
        </div>
    </lightning:layoutItem>
</aura:component>